{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "crons": [
    {
      "path": "/api/reddit/fetch",
      "schedule": "0 */4 * * *"
    },
    {
      "path": "/api/cron/send-weekly-summaries",
      "schedule": "0 9 * * 1"
    },
    {
      "path": "/api/cron/send-scheduled-emails",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/calculate-metrics",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/update-variant-metrics",
      "schedule": "0 1 * * *"
    }
  ]
}
